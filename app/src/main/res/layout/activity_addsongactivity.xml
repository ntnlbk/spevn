<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".addsongactivity" >

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="1dp"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backbtn1"
                    android:layout_width="77.93dp"
                    android:layout_height="65.93dp"
                    android:paddingLeft="30.63dp"
                    android:paddingTop="24.63dp"
                    android:paddingRight="30.63dp"
                    android:paddingBottom="24.63dp"
                    app:srcCompat="@drawable/yellowback" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="22.17dp"
                    android:fontFamily="@font/myfont"
                    android:text="Добавление песни"
                    android:textColor="@color/C2"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/myfont"
                    android:text="Заполните небольшую форму"
                    android:textColor="@color/C2"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/myfont"
                    android:text="Ваше имя"
                    android:textColor="@color/C2"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nameedit"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:fontFamily="@font/myfont"
                    android:hint="Имя"
                    android:textColorHint="@color/C2"
                    android:inputType="textPersonName"
                    android:paddingLeft="21dp"
                    android:textColor="@color/C2"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/myfont"
                    android:text="Автор песни (если известно)"
                    android:textColor="@color/C2"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/authoredit"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:fontFamily="@font/myfont"
                    android:hint="Автор"
                    android:inputType="textPersonName"
                    android:paddingLeft="21dp"
                    android:textColor="@color/C2"
                    android:textColorHint="@color/C2"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/myfont"
                    android:text="Название песни"
                    android:textColor="@color/C2"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nameofsongedit"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:fontFamily="@font/myfont"
                    android:hint="Название "
                    android:textColorHint="@color/C2"
                    android:inputType="textPersonName"
                    android:paddingLeft="21dp"
                    android:textColor="@color/C2"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/myfont"
                    android:text="Текст и аккорды"
                    android:textColor="@color/C2"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/textedit"
                    android:layout_width="match_parent"
                    android:layout_height="216dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:fontFamily="@font/myfont"
                    android:hint="Текст и аккорды"
                    android:inputType="textMultiLine"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:textColorHint="@color/C2"
                    android:textColor="@color/C2"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textfileaddbtn"
                    android:layout_width="254dp"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="или вы можете прикрепить текстовый файл"
                    android:textColor="@color/C2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/canseltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="44dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="отменить"
                    android:textColor="#FFD645"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="198dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/myfont"
                    android:text="Вы можете приложить аудиозапись"
                    android:textColor="@color/C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="156dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/myfont"
                    android:text="Ссылка на аудиофайл  (YouTube, GoogleDisk...)"
                    android:textColor="@color/C2"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/linkedit"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/edittextbackground"
                    android:ems="10"
                    android:fontFamily="@font/myfont"
                    android:hint="Ссылка"
                    android:inputType="textPersonName"
                    android:paddingLeft="21dp"
                    android:textColor="@color/C2"
                    android:textColorHint="@color/C2"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/musfileaddbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/myfont"
                    android:text="или вы можете прикрепить аудиофайл"
                    android:textColor="@color/C2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/canselmus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="44dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="отменить"
                    android:textColor="#FFD645"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/sendbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="52dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/addsongbtn"
                    android:fontFamily="@font/myfont"
                    android:text="отправить"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>